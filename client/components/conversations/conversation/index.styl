.c-conversation
  border-bottom: 1px solid #b2b2b2
  border-right: 1px solid #b2b2b2
  height: 60px
  padding: 10px
  right: -1px
  position: relative

  &:hover
    cursor: pointer

  .avatar
    width: 60px
    height: 60px
    border-radius: 50%
    background: #f6f7f9
    display: inline-block
    vertical-align: middle
    background-size: cover

  .conversation-summary
    margin-left: 10px
    display: inline-block
    vertical-align: middle
    width: 80%

    .name
      font-size: 17px

    .summary
      margin-top: 5px
      color: #999999
      font-size: 14px

    .time
      float: right
      color: #999999
      font-size: 14px

